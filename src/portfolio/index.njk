<header class="page-header">
    <div class="container">
        <h1>{{ title }}</h1>
        <p class="page-intro">Discover a collection of our most exquisite interior design projects, tailored to perfection and brought to life with passion.</p>
    </div>
</header>

<section class="portfolio-main">
    <div class="container">
        {# ========================================================================= #}
        {# FILTER UI (Ref: Content Section - Portfolio Index) #}
        {# ========================================================================= #}
        <aside class="portfolio-filters">
            <h2 class="sr-only">Filter Projects</h2>
            <form class="filter-form">
                <div class="filter-group">
                    <label for="filter-category">Category</label>
                    <select id="filter-category" name="category">
                        <option value="all">All</option>
                        <option value="residential">Residential</option>
                        <option value="commercial">Commercial</option>
                        <option value="hospitality">Hospitality</option>
                        <option value="retail">Retail</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label for="filter-style">Style</label>
                    <select id="filter-style" name="style">
                        <option value="all">All</option>
                        <option value="modern">Modern</option>
                        <option value="classic">Classic</option>
                        <option value="minimalist">Minimalist</option>
                        <option value="industrial">Industrial</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label for="filter-location">Location</label>
                    <select id="filter-location" name="location">
                        <option value="all">All</option>
                        <option value="new-york">New York</option>
                        <option value="london">London</option>
                        <option value="dubai">Dubai</option>
                    </select>
                </div>
                <div class="filter-actions">
                    <button type="reset" class="button-reset">Reset Filters</button>
                </div>
            </form>
        </aside>

        {# ========================================================================= #}
        {# PROJECT THUMBNAIL GRID #}
        {# ========================================================================= #}
        <div class="project-grid">
            {# Row 1 #}
